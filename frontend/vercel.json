{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "npm install && npm run build",
  "builds": [
    { "src": "package.json", "use": "@vercel/next" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "functions": {
    "pages/api/**/*.js": { "maxDuration": 30 }
  },
  "env": {
    "NEXT_PUBLIC_USE_MOCK_API": "true"
  }
}
